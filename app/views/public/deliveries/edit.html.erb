<div class="row login-row">
<h2>配送先編集</h2>

<%= form_with @deliveries do |f| %>
	<div class="field">
                  <label class="post-code-label">郵便番号(ハイフンなし)</label>
                  <%= f.text_field :post_code, autofocus: true, class:"" %>
                </div>
                <div class="field">
                  <label class="address-label">住所</label>
                  <%= f.text_field :address, autofocus: true, class:"", size:"60*60" %>
                </div>
                 <div class="field">
                <label class="address-label">宛名</label>
                 <%= f.text_field :delivery_name, autofocus: true, class:"", size:"30*30" %>
                </div>

	<%= f.submit "更新する", class: "btn btn-primary submit" %>
<% end %>
</div>


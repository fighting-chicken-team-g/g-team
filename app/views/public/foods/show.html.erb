<div class="row login-row">
	<div class="col-xs-3">
		<%#= render 'genre_serch_form', genres: @genres %>
	</div>
	<div class="col-xs-offset-1">
		<div class="product-image">
			<%= image_tag @food.get_food_image(300, 217) %>
		</div>
	</div>
	<div class="col-xs-5">
		<div class="detail">
			<h2><%= @food.food_name %></h2>
			<p><%= @food.introduction %></p>
			<h3 class="food-price">￥<%= (@food.tax_free_price * 1.08).to_i %><span>（税込）</span></h3>
		  <%= form_with(model: @carts, url: carts_path, local: true) do |f| %>
	      <%= f.label :order_count, "個数選択" %>
	      <%= f.number_field :order_count, placeholder: '個数選択', class:"order_count-select-form" %>
	      <%= f.hidden_field :id, :value => @food.id %>
	      <%= f.submit "カートに入れる", class: "btn btn-primary" %>
	    <% end %>
		</div>
	</div>
</div>






<div class="container">
   <div class="row">

    <h2><strong>注文情報確認</strong></h2>
    <div class="col-xs-9">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_foods.each do |cart_food| %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag( cart_food.name, :image, size: "60x50", fallback: "no_image.jpg") %>
                <%= cart_food.food.name %>
              </td>
              <td class="text-right">
                ¥<%= ((cart_food.food.price_without_tax * 0.8).floor).to_s(:delimited, delimiter: ',') %>
              </td>
              <td class="text-right">
                  <%= food_name.quantity %>
              </td>
              <td class="text-right">
                ¥<%= ((cart_food.food.price_without_tax * 0.8).floor * food.quantity).to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">配送料</th>
            <td class="text-right col-xs-5">
              <%= @delivery_price %>
            </td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">
              
            </td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <td class="text-right">
              ¥<%= session[:order]["total_price"].to_s(:delimited, delimiter: ',') %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th  class="info">支払方法</th>
          <td class="text-left">
            <%= session[:order]["payment_method"] %>
          </td>
        </tr>
        <tr>
          <th  class="info">お届け先</th>
          <td class="text-left">
            <%= session[:order]["post_code"] %><br>
            <%= session[:order]["address"] %><br>
            <%= session[:order]["name"]  %>
          </td>
        </tr>
      </table>

      <%= link_to "注文を確定する", orders_confirm_path, method: :post, class: 'btn btn-primary col-xs-12' %>

    </div>
</div>



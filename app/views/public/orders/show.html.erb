<div class="container">
  <div class="row">
    <h3><strong>注文履歴詳細</strong></h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <table class="table table-bordered table-condensed">
        <tbody>
          <tr>
            <th class="info">注文日</th>
            <td class="text-left">
              <%= @order.created_at.strftime('%Y/%m/%d %H:%M') %>
            </td>
          </tr>
          <tr>
            <th class="info">配送先</th>
            <td class="text-left">
              <%= @order.post_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="info">支払方法</th>
            <td class="text-left">
              <%= @order.payment_i18n %>
            </td>
          </tr>
          <tr>
            <th class="info">ステータス</th>
            <td class="text-left">
              <%= @order.order_status_i18n %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <strong>請求情報</strong>
      <table class="table table-bordered table-condensed">
        <tr>
          <th class="info">配送料</th>
          <td class="col-xs-5">
            ¥<%= @order.delivery_price %>
          </td>
        </tr>
        <tr>
          <th class="info">商品合計</th>
          <td class="col-xs-5">
            ¥<%= (@order.total_price - @order.delivery_price).to_s(:delimited, delimiter: ',') %>
          </td>
        </tr>
        <tr>
          <th class="info">ご請求額</th>
          <td class="col-xs-5">
            ¥<%= @total + 800 %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6 order-details">
      <strong>注文内容</strong>
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr class="info">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= order_detail.food.food_name %>
              </td>
              <td>¥<%= order_detail.food.add_tax_sales_price %></td>
              <td><%= order_detail.order_detail_count %></td>
              <td>¥<%= order_detail.sum_of_price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

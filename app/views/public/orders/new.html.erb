<div class="container">
	<div class="row panel panel-warning col-6 d-grid gap-2 mx-auto">
		<div class=" panel-body mt-4">
			<h2>
				<div class="text-center">注文情報入力</div>
			</h2>
			<%= form_with model: @order, url: orders_confirm_path, method: :post do |form| %>
				<h3>支払方法</h3>
				<span></span><%= form.radio_button :payment, "credit_card", checked: "checked" %>
	  			<%= form.label :クレジットカード %><br>
		  		<span></span><%= form.radio_button :payment, "transfer" %>
		  		<%= form.label :銀行振込 %>
				<h3>お届け先</h3>
				<span></span><%= form.radio_button :select_address, 0, checked: "checked" %>
				<%= form.label :ご自身の住所 %><br>
				<span></span><%= @current_end_user.post_code %>
				<%= @current_end_user.address %><br>
				<span></span><%= @current_end_user.last_name %>
				<%= @current_end_user.first_name %><br>
				<span></span><%= form.radio_button :select_address, 1 %>
				<%= form.label :登録済住所から選択 %><br>
				<span></span><%= form.collection_select :address_id, @deliveries, :id, :delivery_address_for_view %><br>
				<span></span><%= form.radio_button :select_address, 2 %>
				<%= form.label :新しいお届け先 %><br>
				<div class="form-group col-xs-12">
					<%= form.label :"郵便番号(ハイフンなし)", class: "col-xs-3 control-label"  %><br>
					<%= form.text_field :post_code, class: "col-xs-4 form-control-static post_code", size:'50*50' %>
				</div>
				<div class="form-group col-xs-12">
					<%= form.label :"住所", class: "col-xs-3 control-label" %><br>
					<%= form.text_field :address, class: "col-xs-7 form-control-static address", size:'50*50' %>
				</div>
				<div class="form-group col-xs-12">
					<%= form.label :"宛名", class: "col-xs-3 control-label" %><br>
					<%= form.text_field :name, class: "col-xs-4 form-control-static name", size:'50*50' %>
				</div>
				<div class="d-grid gap-2 d-md-flex justify-content-md-end">
					<%= form.submit "確認画面へ進む", class: 'btn btn-success col-xs-6 col-xs-offset-1'%>
				</div>
			<% end %>
		</div>
	</div>
</div>

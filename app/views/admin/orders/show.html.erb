<div class="container">
  <div>
    <%= flash[:notice] %>
  </div>
  <div class="row mt-5 offset-md-1">
    <h1>注文履歴詳細</h1>
  </div>
  <div class="row">
    <div class="col-8">
      <table>
        <tr>
          <th>購入者</th>
          <td><%= link_to admin_order_path(@order_show) do %><%= @order_show.end_user.last_name %><%= @order_show.end_user.first_name %><% end %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order_show.created_at.strftime('%Y/%m/%d')  %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order_show.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order_show.payment_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <td>
            <%= form_with model: @order_show, url: admin_order_path(@order_show), method: :patch do |f| %>
              <%= f.select :order_status, [["入金待ち", 0], ["入金確認", 1], ["製作中", 2], ["発送準備", 3], ["発送済み", 4]], include_blank: "選択して下さい" %>
              <%= f.submit '更新', class: 'btn btn-success' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="col-8">
    <table class='table'>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_show.order_details.each do |order| %>
          <tr>
            <td><%= order.food.food_name %></td>
            <td><%= order.food.add_tax_sales_price %></td>
            <td><%= order.order_detail_count %></td>
            <td>
              <select class="form-select" aria-label="Default select example">
                <option selected>選択して下さい</option>
                <option value="1">着手不可</option>
                <option value="2">着手可</option>
              </select>
              <%= submit_tag '変更', class: 'btn btn-success' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-4 offset-8">
      <table class="table table-bordered">
        <tbody>
          <tr><th>商品合計</th><td><%= @order_show.total_price - 800 %>円</td></tr>
          <tr><th>配送料</th><td>800円</td></tr>
          <tr><th>ご請求額</th><td><%= @order_show.total_price %>円</td></tr>
        </tbody>
      </table>
  </div>
</div>
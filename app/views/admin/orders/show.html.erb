<div class="container">
  <div class="row mt-5 offset-md-1">
    <h1>注文履歴詳細</h1>
  </div>

  <div class="row">
    <div class="col-8 offset-md-2">
      <table>
        <tr>
          <th>購入者</th>
          <td><%#= link_to admin_order_path do %><%= @order_show.name %><%# end %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order_show.created_at.strftime('%Y/%m/%d')  %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order_show.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order_show.payment_i18n %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
              <%#= form_with model: @order_show, url: admin_foods_path, local: true, method: :patch do |f| %>
              <%#= f.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %>
              <%#= f.select :プロパティ名, options_from_collection_for_select(モデル, :フォームで送る値(メソッド), :セレクトボックスに表示する値(メソッド)) %>
              <%#= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい" %>
              <%#= f.select :user_id, [['入金待ち', 1], ['入金確認', 2]], { include_blank: true }, { id: "user_id", class: "user_class" } %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
      <table class='table'>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_show.order_details.each do |order| %>
          <tr>
            <td><%= order.food.food_name %></td>
            <td><%= order.food.add_tax_sales_price %></td>
            <td><%= order.order_detail_count%></td>
            
            <td><%# if order.sales_status %>
            販売中
            <%# else %>
            販売停止中
            <%# end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<table border="2">
        <tbody>
          <tr><th>商品合計</th><td><%= @order_show.total_price - 800 %>円</td></tr>
          <tr><th>配送料</th><td>800円</td></tr>
          <tr><th>ご請求額</th><td><%= @order_show.total_price %>円</td></tr>
        </tbody>
      </table>
    </div>
  </div>
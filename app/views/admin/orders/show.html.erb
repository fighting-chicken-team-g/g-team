<div class="container">
  <div class="row mt-5 offset-md-1">
    <h1>注文履歴詳細</h1>
  </div>
  <div class="row">
    <div class="col-8 offset-md-2">
      <table>
        <tr>
          <th>購入者</th>
          <td><%= link_to admin_order_path(@order_show.id) do %><%= @order_show.name %><% end %></td>#
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order_show.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order_show.address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order_show.payment %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
              <%= form_with model: @order_show, url: admin_foods_path, local: true, method: :post do |f| %>
              <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい" %>
          
          <td><% if @order_show.order_status %>
            販売中
            <% else %>
            販売停止中
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
      <table class='table'>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_show.each do |order| %>
          <tr>
            <td><%= order.name %></td>
            <td><%= order.add_tax_sales_price %></td>
            <td><%= order.order_details.order_detail_count%></td>
            <td><% if order.sales_status %>
            販売中
            <% else %>
            販売停止中
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
    <table class='table'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              <% end %>
            </td>
            <td>
              <%= order.end_user.last_name %><%= order.end_user.first_name %>
            </td>
            <td>
              <%= order.order_details.count %>
            </td>
            <td>
              <%= order.order_status_i18n %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @order %>
  </div>
</div>

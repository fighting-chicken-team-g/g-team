<div class="container">
  <div class="row">
    <h1>　注文履歴一覧　</h1>
    <table class='table'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
      <tbody>
        <%@order.each do |f| %>
            <td><%= link_to admin_order_path(@order) do %><%= f.created_at.strftime('%Y/%m/%d') %><% end %></td>
            <td><%= f.end_user.last_name %><%= f.end_user.first_name %></td>
            <td><%= f.order_details.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @order %>
  </div>
</div>
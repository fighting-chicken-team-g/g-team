<div class="container">
  <div class="row">
    <h1><%= @end_user.last_name %><%= @end_user.first_name %>さんの注文履歴</h1>
    <table class='table'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            <td><%= order.order_details.sum(:order_detail_count) %></td>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<%= paginate @orders %>
  </div>
</div>


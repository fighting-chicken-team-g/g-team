<div class="container">
  <div class="row mt-5 offset-md-1">
    <h1><%= @end_user.last_name %><%= @end_user.first_name %>様の会員詳細</h1>
  </div>
  <div class="row">
    <div class="col-4">

    </div>
    <div class="col-8">
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @end_user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @end_user.last_name %><%= @end_user.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @end_user.last_name_read %><%= @end_user.first_name_read %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @end_user.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @end_user.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @end_user.tel %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @end_user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><% if @end_user.is_deleted %>
            退会
            <% else %>
            有効
            <% end %>
          </td>
        </tr>
      </table>
      <div class="button text-center">
      <%= link_to '編集する', edit_admin_end_user_path(@end_user), class:"btn btn-sm btn-success" %>
      </div>
      <div class="button text-center">
      <%= link_to '注文履歴一覧を見る', admin_path(@end_user), class:"btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>

<h1>商品詳細</h1>

<table>
  <tr>
    <th>商品名</th>
    <td><%= @food_show.food_name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @food_show.introduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= @food_show.genre.genre_name %></td>
  </tr>

<div class="container">
  <div class="row mt-5 offset-md-2">
  <h1>商品編集</h1>
  </div>
  <div class="row">
    <div class="col-8 offset-md-4">
  <%= form_with model: @food_edit, url: admin_food_path, method: :patch do |f| %>
        <table>
          <tr>
            <td><%= f.label :"商品画像" %></td>
            <td><%= f.file_field :food_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td><%= f.label :"商品名" %></td>
            <td><%= f.text_field :food_name %></td>
          </tr>
          <tr>
            <td><%= f.label :"商品説明" %></td>
            <td><%= f.text_field :introduction, style: "width:80%", rows: "5" %></td>
          </tr>
            <td><%= f.label :"ジャンル" %></td>
            <td>
                <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい" %>
            </td>
          <tr>
            <td><%= f.label :"税抜価格" %></td>
            <td><%= f.text_field :tax_free_price %></td>
          </tr>
          <tr>
            <td><%= f.label :"販売ステータス" %></td>
            <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            </td>
          </tr>
          <tr>
          </tr>
      </table>
    <%= f.submit '変更を保存', class:"text-center btn btn-success" %>
  <% end %>
  </div>
</div>